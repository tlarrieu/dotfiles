[user]
	name = Thomas Larrieu
	email = thomas.larrieu@gmail.com
[credential]
	helper = cache
[color]
	ui = auto
	status = auto
	diff = auto
[push]
	default = current
[difftool]
	prompt = true
[difftool.nvim]
	cmd = nvim -d $LOCAL $REMOTE
[core]
	editor = nvim
	excludesFile = /home/tlarrieu/.gitignore
[pull]
	ff = only
[branch]
	committerdate = true
[alias]
	bd = "!git branch --no-contains master --format='%(refname:short)' --merged master | xargs --no-run-if-empty git branch -d"
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff --word-diff
	deps = "!git checkout -b update-dependencies && git add Gemfile.lock && git commit -m 'Update dependencies'"
	ds = d --staged
	ft = fetch
	lc = log --merges
	lg = llg master..@
	llg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	llga = llg --all
	patch = diff --word-diff=none
	r = rebase
	rc = rebase --continue
	s = status
	sh = show -s --pretty=format:'%Cred%h %C(blue)(^ %p)%C(yellow)%d%n%C(bold blue)<%an>%Creset %Cgreen(%cr) %Creset%Creset: %s%Creset%+b %n'
	sl = stash list -p
	st = stash
	sync = fetch --all --prune --tags
	wip = commit -m "WIP"
	wtf = "!git config --list --show-origin | \
		grep -v alias.wtf | \
		sed 's#file:/home/.*/.gitconfig#global#' | \
		sed 's#file:.git/config#project#' | \
		grep 'alias.' | \
		sed 's/alias.//' | \
		sed 's/=/ø/' | \
		column -s 'ø' -t | \
		sed 's/^\\(.\\)/  \\1/'"

# vim: ft=gitconfig
[init]
	defaultBranch = master

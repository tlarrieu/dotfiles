#!/bin/sh

LAUNCHER='rofi -dmenu -i -p layout:'
OPTIONS="magnifier
  \nfair
  \nfair.horizontal
  \nmax
  \ntile.right
  \ntile.left
  \ntile.top
  \ntile.bottom"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $1}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]; then
  echo "
  awful = require('awful')
  awful.layout.set(awful.layout.suit.$option)
  " | awesome-client
fi

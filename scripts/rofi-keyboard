#!/bin/bash

LAUNCHER='rofi -dmenu -i -p 󰥻 -l 6'
OPTIONS="Bépo\nQwerty\nDvorak\nColemak\nWorkman\nAzerty"

option=$(echo -e "$OPTIONS" | $LAUNCHER | awk '{print $1}' | tr -d '\r\n')

if [ ${#option} -gt 0 ]; then
  case $option in
    Bépo)
      layout=fr
      variant=bepo
      ;;
    Dvorak)
      layout=us
      variant=dvorak
      ;;
    Colemak)
      layout=us
      variant=colemak
      ;;
    Workman)
      layout=us
      variant=workman
      ;;
    Qwerty)
      layout=us
      variant=""
      ;;
    Azerty)
      layout=fr
      variant=""
      ;;
  esac

  if [[ $(setxkbmap -option ctrl:nocaps -model pc105 -layout "$layout" -variant "$variant") ]]; then
    notify-send Failure "Could not load (layout = $layout, variant = $variant)"
  else
    notify-send Success "Keyboard set to (layout = $layout, variant = $variant)"
  fi

  xmodmap ~/.Xmodmap
fi

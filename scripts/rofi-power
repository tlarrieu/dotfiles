#!/bin/bash

LAUNCHER='rofi -dmenu -l 6 -i -p 󱐋'
OPTIONS="󰷛  Lock\n  Reboot\n󰶐  Screen off\n  Shutdown\n󰒲  Suspend\n󰍃  Logout"

lock() {
  i3lock -C -i ~/.lock-picture || i3lock
}

option=$(echo -e "$OPTIONS" | $LAUNCHER | awk '{print $2}' | tr -d '\r\n')
if [ ${#option} -gt 0 ]; then
  case $option in
    Lock)
      mpc pause
      lock
      ;;
    Screen)
      xset dpms force off
      ;;
    Reboot)
      mpc pause
      systemctl reboot
      ;;
    Shutdown)
      mpc pause
      systemctl poweroff
      ;;
    Suspend)
      mpc pause
      lock
      systemctl suspend
      ;;
    Logout)
      mpc pause
      awesome-client "awesome.quit()"
      ;;
    *)
      ;;
  esac
fi

#!/bin/bash

LAUNCHER='rofi -dmenu -lines 5 -i -p ⏼'
OPTIONS=" Lock\n Reboot\n Shutdown\n Suspend\n Logout"

option=`echo -e $OPTIONS | $LAUNCHER | awk '{print $2}' | tr -d '\r\n'`
if [ ${#option} -gt 0 ]; then
  case $option in
    Lock)
      mpc pause
      i3lock
      ;;
    Reboot)
      mpc pause
      systemctl reboot
      ;;
    Shutdown)
      mpc pause
      systemctl poweroff
      ;;
    Suspend)
      mpc pause
      i3lock
      systemctl suspend
      ;;
    Logout)
      mpc pause
      awesome-client "awesome.quit()"
      ;;
    *)
      ;;
  esac
fi

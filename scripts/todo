#!/usr/bin/env sh

function search {
  rg 'TODO|XXX'
}

function gitsearch {
  git diff $1 -G 'TODO|XXX' --name-only --diff-filter=d
}

function prefix {
  awk '{print "â†’  " $0}'
}

case $1 in
  .)  todo=$(gitsearch HEAD | prefix);;
  ..) todo=$(gitsearch develop.. | prefix);;
  *)  todo=$(search | prefix);;
esac

ponysay -W i "$todo"
